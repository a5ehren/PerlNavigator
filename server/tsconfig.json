{
	"compilerOptions": {
		"target": "es2021",
		"lib": ["es2021", "dom"],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"typeRoots": ["./node_modules/@types"],
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test", "../node_modules"]
}
